{
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],

    "parserOptions": {
        "ecmaVersion": 2021,
        "project": "./tsconfig.json"
    },
    "rules": {
        "prefer-const": "off"
    }
}